# Environment Configuration
NODE_ENV=production
PORT=3001

# Frontend URL for CORS (update this with your actual Netlify domain)
FRONTEND_URL=https://your-therapai-site.netlify.app

# Database
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# RevenueCat
REVENUECAT_API_KEY=your_revenuecat_api_key_here
REVENUECAT_APP_ID=your_revenuecat_app_id_here

# ElevenLabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_default_voice_id_here

# Tavus
TAVUS_API_KEY=your_tavus_api_key_here
TAVUS_REPLICA_ID=your_tavus_replica_id_here

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration (for password resets, notifications, etc.)
# SMTP = Simple Mail Transfer Protocol - how apps send emails
# You can use Gmail, SendGrid, Mailgun, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_or_api_key

# Lingo Localization
LINGO_API_KEY=your_lingo_api_key_here
LINGO_PROJECT_ID=your_lingo_project_id_here
