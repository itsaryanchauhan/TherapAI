{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false
    },
    "include": [
        "functions/**/*",
        "../src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}